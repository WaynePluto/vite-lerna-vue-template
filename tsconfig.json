{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "common_lib": [
        "packages/common_lib/src/lib.ts"
      ]
    },
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedParameters": false,
  },
  "include": [
    "/**/src/**/*.ts",
    "/**/src/**/*.d.ts",
    "/**/src/**/*.tsx",
    "/**/src/**/*.js",
    "/**/src/**/*.vue",
  ]
}